.row.row-cols-1.row-cols-md-2.row-cols-lg-3 data-masonry='{"percentPosition": true}'
  - authors.each do |author|
    div.p-4
      article.card
        header.card-header.h4
          a href="#{url("/authors/#{author.id}")}"
            = author.name
        ul.list-group.list-group-flush
          - author.books.each do |book|
            li.list-group-item
              a href="#{url("/books/#{book.id}")}"
                = book.title

footer
  == pagy_bootstrap_nav(pagy)

